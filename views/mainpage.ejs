<!DOCTYPE html>
<html>
<head>
    <link href="/Player.css" rel="stylesheet" type="text/css">
</head>
<body >
    <table style="border: 5px solid red; width:100%;">
        <tr>
            <td style="width: 10%;">
                <a href="/userprofile">
                    <button><img src="images/userimage.jpg"  width="100px" height="100px"></button>
                </a>
            

            </td>
            <td style="width:50% ;text-align: right;">
            <form>
            <input type="text" id="fname" name="fname" style="width: 300px;height:30px">
                
            </td>
            <td style="width: 40%;text-align: left;">
            <input type="image" src="images/searchimage.png" style="width: 60px;height:60px" alt="submit"> </input>
            </form>
            </td>

        </tr>
    </table>
    <div style="width: 100%;">
        <div style="width: 10%;border:5px solid red;padding-block: 10px;display: inline-block;vertical-align: top;">
            <button style="width: 100%;height:30px ;">players</button>
            <button style="width: 100%;height: 30px;">rankings</button>

        </div >
        <div style="width: 88%;border:5px solid red;padding-block: 10px; display: inline-block;">
            <table >
                <tr>
                    <%arr.forEach(player => {%>
                    <a href="/playerprofile/:<%= player.fullname%>" >
                        <button class="playerbutton">
                            <img src="images/userimage.jpg"   width="200px" height="200px">
                            <p style="font-size: 15px;" > <%= player.fullname%></p> 
                        </button>
                    </a>
                    <%})%>
                    
                </tr>


            </table>
            
        </div>
    </div>

</body>

</html>